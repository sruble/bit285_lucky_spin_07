@model LuckySpin.ViewModels.SpinViewModel
<!-- Using the SpinViewModel-->
@inject LuckySpin.Models.TextTransformService Transform
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<button onclick='history.go(0)'>Spin</button>
<div>@Model.A</div><div>@Model.B</div><div>@Model.C</div>
<h1> Lucky @Transform.numberToText(Model.Luck) </h1>
<div class="balance">
     <a asp-action="LuckList" 
        asp-controller="Spinner" 
        asp-route-id="ViewBag.PlayerId">
        Current Balance</a>:<span>$@Model.Balance</span>
</div>
<h2 style="display:@ViewBag.Display">@Model.FirstName, You Win!</h2>
<img src="/Images/LuckySpinCoins.jpg" class="animated bounce" alt="Coins" style="display:@ViewBag.Display" />